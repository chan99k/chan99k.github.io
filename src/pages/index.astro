---
import { getCollection } from 'astro:content';
import Layout from '../layouts/Layout.astro';
import PostCard from '../components/PostCard.astro';
import { formatDate } from '../utils';

const posts = (await getCollection('blog'))
    .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
    .slice(0, 3);

const projects = (await getCollection('projects'))
    .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
    .slice(0, 2);
import ProjectCard from '../components/ProjectCard.astro';
---

<Layout title="chan99k's blog">
    <section class="py-24 sm:py-32">
        <h1 class="text-5xl sm:text-7xl font-bold tracking-tight mb-6">
            Hello, I'm <span class="text-accent">Chan</span>.
            <br />
            Developer & Builder.
        </h1>
        <p class="text-xl text-gray-500 max-w-2xl leading-relaxed">
            Writing about web development, design systems, and my journey as a creator.
            Currently building minimalist and high-performance applications.
        </p>
    </section>

    <section class="py-12 border-t border-gray-100 dark:border-gray-800">
        <div class="flex items-center justify-between mb-8">
            <h2 class="text-2xl font-bold">Featured Projects</h2>
            <a href="/projects" class="text-sm font-medium hover:underline text-gray-500">View all</a>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            {projects.map((project) => (
                <ProjectCard project={project} />
            ))}
        </div>
    </section>

    <section class="py-12 border-t border-gray-100 dark:border-gray-800">
        <div class="flex items-center justify-between mb-8">
            <h2 class="text-2xl font-bold">Latest Posts</h2>
            <a href="/blog" class="text-sm font-medium hover:underline text-gray-500">View all</a>
        </div>
        <div class="flex flex-col">
            {posts.map((post) => (
                <PostCard post={post} />
            ))}
        </div>
    </section>
</Layout>
