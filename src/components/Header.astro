---
const navItems = [
    { linkText: 'Blog', href: '/blog' },
    { linkText: 'Projects', href: '/projects' },
    { linkText: 'About', href: '/about' }
];
---

<header class="sticky top-0 z-50 bg-white/80 dark:bg-black/80 backdrop-blur-md transition-colors duration-300">
    <nav class="flex items-center justify-between py-5 border-b border-gray-100 dark:border-gray-800">
        <a href="/" class="text-2xl font-bold tracking-tight hover:opacity-70 transition-opacity">
            chan99k
        </a>
        
        {
            !!navItems?.length && (
                <ul class="flex gap-x-6">
                    {navItems.map((item) => (
                        <li>
                            <a href={item.href} class="text-sm font-medium hover:text-accent transition-colors">
                                {item.linkText}
                            </a>
                        </li>
                    ))}
                </ul>
            )
        }
    </nav>
</header>
