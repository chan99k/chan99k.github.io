---
import { type CollectionEntry } from 'astro:content';
import FormattedDate from './FormattedDate.astro';
import TagChips from './TagChips.astro';

interface Props {
	post: CollectionEntry<'blog'>;
}

const { post } = Astro.props;
---

<div class="group py-6 sm:py-8 border-b border-gray-100 dark:border-gray-800 last:border-0">
    <a href={`/blog/${post.slug}/`} class="block no-underline">
        <div class="flex items-center justify-between">
            <span class="text-xs text-gray-400 font-mono uppercase tracking-widest">
                <FormattedDate date={post.data.pubDate} />
            </span>
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-gray-300 dark:text-gray-700 transition-all duration-300 group-hover:text-accent group-hover:translate-x-1 hidden sm:block"><path d="M5 12h14"/><path d="m12 5 7 7-7 7"/></svg>
        </div>
        <h3 class="text-lg sm:text-2xl font-bold tracking-tight transition-colors group-hover:text-accent mt-2">
            {post.data.title}
        </h3>
        <p class="text-sm sm:text-base text-gray-500 dark:text-gray-400 line-clamp-2 leading-relaxed mt-1.5 sm:mt-2">
            {post.data.description}
        </p>
    </a>
    {post.data.tags.length > 0 && (
        <div class="mt-2.5 sm:mt-3">
            <TagChips tags={post.data.tags} />
        </div>
    )}
</div>
