---
import { tagToSlug } from '../utils/tags';

interface Props {
	tags: string[];
	size?: 'sm' | 'md';
}

const { tags, size = 'sm' } = Astro.props;

const sizeClasses = {
	sm: 'text-xs px-2.5 py-0.5',
	md: 'text-sm px-3 py-1',
};
---

<div class="flex flex-wrap gap-2">
	{tags.map((tag) => {
		const label = tag.includes('/') ? tag.split('/').pop() : tag;
		return (
			<a
				href={`/tags/${tagToSlug(tag)}/`}
				class:list={[
					'no-underline border border-gray-200 dark:border-gray-700 rounded-full',
					'text-gray-500 dark:text-gray-400 hover:text-accent hover:border-accent',
					'dark:hover:text-accent dark:hover:border-accent transition-colors',
					sizeClasses[size],
				]}
			>
				{label}
			</a>
		);
	})}
</div>
